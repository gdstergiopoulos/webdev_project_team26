{{>adminnav loggname=loggname}}
<div id="pagebody">
    {{#each reservInfo}}
        <div id="reservinfo">
            <h1>Assign table to Reservation #{{reservID}}</h1>
            <p><span>Username: </span>{{username}}</p>
            <p><span>Date for the reservation: </span>{{date}}</p>
            <p><span>Time for the reservation: </span>{{time}}</p>
            <p><span>Number of people: </span>{{numofpeople}}</p>
            <p><span>Desired Sitting area: </span>{{desired_area}}</p>
            <p><span>Reservation Made (date and time):</span>{{datetimemade}}</p>
        </div>
    {{/each}}
    <div class="assign_table_container">
        <div class="assign_table" id="floorplan_assign">
        {{>floorplan page='assigntable' reservID=reservInfo.reservID}}
        </div>
        {{#if (eq area_id "insidemain")}}
        <div class="assign_table" id="inside_assign">
        {{>insidemain}}
        </div>
        {{/if}}

        {{#if (eq area_id "bararea")}}
        <div class="assign_table" id="inside_assign">

        {{>bararea}}
        </div>
        {{/if}}

        {{#if (eq area_id "outsidemain")}}
        <div class="assign_table" id="inside_assign">
        
        {{>outsidemain}}
        </div>
        {{/if}}

        {{#if (eq area_id "opensky")}}
        <div class="assign_table" id="inside_assign">

        {{>opensky}}
        </div>
        {{/if}}

        {{#if (eq area_id "bythesea")}}
        <div class="assign_table" id="inside_assign">

        {{>bythesea}}
        </div>
        {{/if}}
    </div>
    <div id="assignbtns">
            <a id = "assign_back_btn" class = "btn btn-primary" href="/adminreserv">Back</a>
            <a id = "assign_approve_btn" class = "btn btn-primary" href="/change_status/{{reservInfo.[0].reservID}}/confirmed" style = "background-color: green;" >Approve</a>
    </div>
</div>
