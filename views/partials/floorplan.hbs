{{#if (eq page 'userreserv')}}
<div  id="floorplan">
      <h1>Select Desired Seating Area</h1>
      <a onclick="document.getElementsByName('area')[0].value = 'insidemain'" class="btn btn-primary" id="insidemain">Inside Main Area</a>
      <a onclick="document.getElementsByName('area')[0].value = 'bararea'" class="btn btn-primary" id="bararea">Inside Bar Area</a>
      <br>
      <a onclick="document.getElementsByName('area')[0].value = 'outsidemain'" class="btn btn-primary" id="outsidemain">Outside Main Area</a>
      <a onclick="document.getElementsByName('area')[0].value = 'opensky'" class="btn btn-primary" id="opensky">Outside Open Sky</a>
      <br>
      <a onclick="document.getElementsByName('area')[0].value = 'bythesea'" class="btn btn-primary" id="bythesea">By the sea</a>
    </div>
{{/if}}
