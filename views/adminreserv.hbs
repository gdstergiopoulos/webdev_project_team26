{{>adminnav loggname=loggname}}
<div id="pagebody">
<div class="container" id="pendinglist">
        <div class="tasks">
            <h1>Reservation Requests</h1>
            <ul class="task-list" style="overflow-y: scroll; max-height: 200px;">
              {{#each active_reservations}}
                <li>
                  <span>{{username}}</span>
                  <span>{{date}}</span>
                  <span>{{time}}</span>
                  <span>{{people}}</span>
                  {{#if (neq tableID 'null')}}
                    <span>{{tableID}}</span>
                  {{else}}
                      <span>Not Assigned</span>
                  {{/if}}
                  <a href="assign_table/{{reservID}}" class="btn btn-primary edit">Assign Table</a>
                  <a class="btn btn-primary remove" href="reject_resv/{{reservID}}" class="btn btn-primary edit">Reject</a>
                  <button class="btn btn-primary approve">Approve</button>
                  </li>
                  <hr>
              {{/each}} 
            </ul>
