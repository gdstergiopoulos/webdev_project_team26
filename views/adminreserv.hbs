              <span>{{username}}</span>
              <span>{{date}}</span>
              <span>{{time}}</span>
              <span>{{people}}</span>
              <a class="btn btn-primary edit" href = "assign_table/{{reservID}}">Edit</a>
              <a class="btn btn-primary remove" href = "reject_resv/{{reservID}}">Remove</a>
              </li>
              <hr>
              {{/each}} 
          </ul>
